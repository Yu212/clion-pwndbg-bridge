<idea-plugin>
    <id>com.yu212.pwndbgbridge</id>
    <name>Pwndbg Bridge</name>
    <vendor email="yu212.mc@gmail.com">Yu_212</vendor>

    <depends>com.intellij.modules.clion</depends>

    <idea-version since-build="253"/>

    <dependencies>
        <module name="intellij.platform.dap"/>
    </dependencies>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.yu212.pwndbg.PwndbgStartupActivity"/>
        <applicationConfigurable
                displayName="Pwndbg Bridge"
                id="com.yu212.pwndbg.settings"
                implementation="com.yu212.pwndbg.settings.PwndbgSettingsConfigurable"/>
    </extensions>

    <actions>
        <group id="PwndbgTabMoveGroup"
               class="com.yu212.pwndbg.ui.actions.MoveTabActionGroup"
               popup="true">
            <add-to-group group-id="ToolWindowContextMenu" anchor="last"/>
        </group>
        <group id="PwndbgTabFontSizeGroup"
               class="com.yu212.pwndbg.ui.actions.TabFontSizeActionGroup"
               popup="true">
            <add-to-group group-id="ToolWindowContextMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
